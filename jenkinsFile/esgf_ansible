def error = null
currentBuild.result = "SUCCESS"

esgf_ansible_url = "https://github.com/ESGF/esgf-ansible.git"
//esgf_ansible_branch = "ncarlson"
esgf_ansible_jenkins_url = "https://github.com/muryanto1/esgf-ansible-jenkins.git"

data_node = "${vm_node}.llnl.gov"
index_idp_node = "${vm_node}.llnl.gov"

vm_host = "grim.llnl.gov"
//vmx_file = "/var/lib/jenkins/vmware/${vm_node}/${vm_node}.vmx"
vm_snapshot = "SnapshotForJenkins"
vm_jenkins_home = "/home/jenkins"
vm_python_path = "${vm_jenkins_home}/miniconda2/bin"

// on master
conda_path = "/var/lib/jenkins/work/miniconda3/bin"
python = "${conda_path}/python"
conf_dir = "/var/lib/jenkins/esgf"

workdir = "/var/lib/jenkins/work/esgf-ansible-jenkins"
vars_file = "/var/lib/jenkins/esgf/ansible/configs/${vm_node}.vars"
hosts_file = "${workdir}/hosts_file"

create_hosts_script = "esgf_ansible_jenkins/scripts/create_hosts_file.py"
prepare_vm = "esgf_ansible_jenkins/scripts/prepare_vm.py"

// for running esgf-test-suite
run_esgf_test_suite = "esgf_ansible_jenkins/scripts/run_esgf_test_suite.py"
run_options = "!compute,!dl"
esgf_test_suite_branch = 'master'
config_ini = '/home/jenkins/esgf/${vm_node}_config.ini'

try {
    stage('checkout') {
        node('master') {
	    withEnv(["ws=${pwd()}"]) {
		dir("esgf_ansible") {
                    git branch: "$esgf_ansible_branch", credentialsId: 'muryanto1', url: "${esgf_ansible_url}"
		}
		dir("esgf_ansible_jenkins") {
                    git branch: "master", credentialsId: 'muryanto1', url: "${esgf_ansible_jenkins_url}"
 		}
	    }
        }
    }
    stage('prepare_vm') {
        node('master') {
            withEnv(["ws=${pwd()}"]) {
                echo "...prepare_vm..."
                sh "${python} ${prepare_vm} -H ${vm_host} -x ${vmx_file} -s ${vm_snapshot} -n ${vm_node}"
		sh "scp ${conf_dir}/esgf-test-suite/${vm_node}_config.ini ${vm_node}:${vm_jenkins_home}/esgf"
            }
        }
    }
    stage('run_playbook') {
        node('master') {
	    withEnv(["ws=${pwd()}"]) {
	        // create hosts file
	        def sample_hosts_file = "${ws}/esgf_ansible/sample.hosts"
	        def set_env = "export TERM=vt100; export ANSIBLE_NOCOWS=1; export PATH=$conda_path:/sbin:/usr/sbin:$PATH"
                sh "${python} ${ws}/${create_hosts_script} -d ${data_node} -i ${index_idp_node} -s ${sample_hosts_file} -o ${hosts_file}"
	        sh "bash -c '${set_env}; ansible-playbook -i ${hosts_file} -v --tags install -u root -c paramiko -e @${vars_file} ${ws}/esgf_ansible/all.yml'"  
            }
	}
    }
    stage('start_services') {
        node('master') {
	    withEnv(["ws=${pwd()}"]) {
		def set_env = "export TERM=vt100; export ANSIBLE_NOCOWS=1; export PATH=$conda_path:/sbin:/usr/sbin:$PATH"
		sh "bash -c '${set_env}; ansible-playbook -i ${hosts_file} -v --skip-tags install --tags start -u root -c paramiko -e @${vars_file} ${ws}/esgf_ansible/all.yml'"
	    }
        }
    }
    stage('run_tests_on_vm') {
        node("${vm_node}") {
            withEnv(["ws=${pwd()}"]) {
                echo "...run_tests_on_vm..."
                sh "mkdir esgf_ansible_jenkins"
		dir("esgf_ansible_jenkins") {
		    git branch: "master", credentialsId: 'muryanto1', url: "${esgf_ansible_jenkins_url}"
		}
		sh "${vm_python_path}/python ${ws}/${run_esgf_test_suite} -b ${esgf_test_suite_branch} -p ${vm_python_path} -o ${run_options} -w ${vm_jenkins_home} -c ${config_ini}"
		//sh "${vm_python_path}/python ${ws}/${run_esgf_test_suite} -b ${esgf_test_suite_branch} -p ${vm_python_path} -o ${run_options1} -w ${vm_jenkins_home} -c ${config_ini}"
            }
        }
    }

} catch (caughtException) {
    error = caughtException
    currentBuild.result = "FAILURE"
}

